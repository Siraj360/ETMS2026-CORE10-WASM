@using ETMS2026CORE10WA.Model
@using ETMS2026CORE10WA.Components.Core
@using System.Net.Http.Json
@using System.Text.Json
@using Blazored.LocalStorage
@using Microsoft.AspNetCore.Components
@using System.Net.Http
@using Microsoft.Extensions.DependencyInjection

<style>
    .tbl-div{
        margin-bottom: -16px;
    }

    .is_show {
        display: inline-block;
    }

    .is_hide {
        display: none;
    }

</style>

@code
{
    int cx = 1;
    // Course cource = new Course();
}

<tr>
    <td>
        <div class="card shadow mb-1 border-2 border-@employeeInfo.cssStyle">
            <div class="card-header cursor-pointer" @onclick="()=>isShow = !isShow">
                <div class="row d-flex align-items-center py-1">
                    <div class="col-md-10">
                        <span class="badge rounded-pill bg-primary"> @index</span> &nbsp;
                        <span class="fw-bold">@employeeInfo.Name</span> &nbsp;
                        <span class="badge bg-secondary">@employeeInfo.HireDate.Date.ToString("dd MMM yyyy")</span>
                    </div>
                    <div class="col-md-2">

                        <i class="@(isShow ? "is_show" : "is_hide") fa-solid fa-circle-arrow-up float-end fs-4"></i>
                        <i class="@(isShow ? "is_hide" : "is_show") fa-solid fa-circle-arrow-down float-end fs-4"></i>

                        <span class="badge bg-dark float-end me-2">@employeeInfo.PercentCourcesCompleted</span>&nbsp;
                        <strong class="float-end me-2">@employeeInfo.TotalCoursesCompleted / @employeeInfo.TotalCoursesAssined</strong>&nbsp;
        
                    
                    </div>
                </div>

            </div>
            <div class="tbl-div @(isShow ? "is_show" : "is_hide")">
                <table class="table table-sm  table-bordered  table-striped table-hover table-@employeeInfo.cssStyle">
                    <thead >
                        <tr class="table-secondary">
                            <th scope="col" class="text-center">#</th>
                            <th scope="col">Course</th>
                            <th scope="col" class="text-center">Code</th>
                            <th class="text-center" scope="col">Completed?</th>
                            <th scope="col" class="text-center"> Make as ...</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (employeeInfo.EmployeeCourseList != null && employeeInfo.EmployeeCourseList.Count > 0)
                        {
                            cx = 1;
                            @foreach (var employeeInfoCourses in employeeInfo.EmployeeCourseList)
                            {                         
                                <tr>
                                    @* @cource = employeeInfo.CourseList.FirstOrDefault(m => m.CourseID == employeeInfoCourses.CourseID) *@

                                    <th scope="row" class="text-center ">
                                        <span class="badge bg-dark">@cx</span>
                                    </th>
                                    <td class="pt-2">@employeeInfo.CourseList.FirstOrDefault(m => m.CourseID == employeeInfoCourses.CourseID).Name </td>
                                    <td class="text-center pt-2">@employeeInfo.CourseList.FirstOrDefault(m => m.CourseID == employeeInfoCourses.CourseID).Code</td>
                                    <td class="text-center pt-2">
                                        @if (employeeInfoCourses.isComplete)
                                        {
                                            <i class="fa-solid fa-square-check fs-4 text-success"></i>
                                        }
                                        else
                                        {
                                           <i class="fa-solid fa-rectangle-xmark fs-4 text-danger"></i>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (employeeInfoCourses.isComplete)
                                        {
                                            <button type="button" class="btn btn-danger btn-sm"
                                             @onclick="()=>ChangeCompleteStatus(employeeInfoCourses.EmployeeCourseID)"> Uncomplete</button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-success btn-sm"
                                            @onclick="()=>ChangeCompleteStatus(employeeInfoCourses.EmployeeCourseID)">Complete</button>
                                        }
                                    </td>
                                </tr>
                                cx++;
                            }
                        }
                        else
                        {
                            <tr class="table-warning">
                                <td colspan="5" scope="row">&nbsp;&nbsp;<span class="oi oi-warning"></span>&nbsp;Please add course.</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>


    </td>
</tr>

@code {
    [Parameter]
    public EmployeeInfo? employeeInfo { get; set; }
    
    [Parameter]
    public int index { get; set; }

    private bool isShow = true;

    [Parameter]
    public EventCallback<int> OnStatusChanged { get; set; }

    private async Task ChangeCompleteStatus(int employeeCourseID)
    {
        if (OnStatusChanged.HasDelegate)
        {
            await OnStatusChanged.InvokeAsync(employeeCourseID);
        }
    }
    protected override async Task OnInitializedAsync()
    { }



    

    

}
