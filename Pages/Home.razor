<style>
    /* Fix horizontal overflow globally */
    body, html {
        overflow-x: hidden !important;
    }

    /* Prevent image layout overflow */
    .home-img {
        transform: scale(0.7);
        margin-top: -60px;
        margin-bottom: -40px;
        max-width: 100%;
        height: auto;
        display: block;
    }

    /* Prevent alert columns from overflowing */
    .alert .col-11 {
        word-wrap: break-word;
    }

    .alert-thick-start {
        /* Set the left border to 5px solid (or your preferred unit) */
        border-left-width: 5px !important;
        /* Set all other borders (top, right, bottom) to 1px */
        border-top-width: 1px !important;
        border-right-width: 1px !important;
        border-bottom-width: 1px !important;
        /* Ensure the border style is solid */
        border-style: solid !important;
    }

    * {
        box-sizing: border-box;
    }
</style>



